<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hormiga6.androidapipractice.UncaughtException.UncaughtExceptionActivity">

    <Button
        android:id="@+id/buttonException"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="tapException"
        android:text="throw exception"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <Button
        android:id="@+id/buttonIgnore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginEnd="18dp"
        android:layout_marginStart="10dp" android:layout_marginTop="16dp"
        android:text="RegisterIgnoreException"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/buttonException"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="registerIgnoreHandler"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
