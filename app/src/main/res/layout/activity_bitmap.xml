<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bitmap.BitmapActivity">

    <ImageView
        android:id="@+id/bitmapImageView1"
        android:layout_width="90dp" android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/holo_blue_light"/>
    <ImageView
        android:id="@+id/bitmapImageView2"
        android:layout_width="90dp" android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bitmapImageView1"
        app:srcCompat="@android:color/holo_blue_light"/>
    <ImageView
        android:id="@+id/bitmapImageView3"
        android:layout_width="90dp" android:layout_height="120dp"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bitmapImageView2"
        app:srcCompat="@android:color/holo_blue_light"/>
</android.support.constraint.ConstraintLayout>