<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hormiga6.androidapipractice.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overylay"
        android:id="@+id/buttonOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="dispatchActivity"
        android:tag="BaseActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawable"
        android:id="@+id/buttonDrawable"
        android:onClick="dispatchActivity"
        android:layout_below="@+id/buttonMultiTypeListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:tag="DrawableActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress Bar"
        android:id="@+id/buttonProgressBar"
        android:layout_below="@+id/buttonDrawer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="dispatchActivity"
        android:tag="ProgressBarActivity" />

    <Button
        android:text="context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_below="@+id/buttonShowActivityResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="dispatchActivity"
        android:tag="ContextCheckActivity1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list view"
        android:id="@+id/buttonListView"
        android:onClick="dispatchActivity"
        android:tag="ListViewActivity"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonDrawable"
        android:layout_toEndOf="@+id/buttonDrawable" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ripple"
        android:id="@+id/buttonRipple"
        android:onClick="dispatchActivity"
        android:tag="RippleActivity"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonListView"
        android:layout_toEndOf="@+id/buttonListView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi Type List View"
        android:id="@+id/buttonMultiTypeListView"
        android:onClick="dispatchActivity"
        android:tag="MultiTypeListActivity"
        android:layout_below="@+id/buttonOverlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawer"
        android:id="@+id/buttonDrawer"
        android:onClick="dispatchActivity"
        android:tag="DrawerActivity"
        android:layout_below="@+id/buttonRipple"
        android:layout_toRightOf="@+id/buttonListView"
        android:layout_toEndOf="@+id/buttonListView" />

    <Button
        android:text="Activity Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonShowActivityResult"
        android:onClick="dispatchActivity"
        android:tag="StartActivity"
        android:layout_below="@+id/buttonMultiTypeListView"
        android:layout_toRightOf="@+id/buttonProgressBar"
        android:layout_toEndOf="@+id/buttonProgressBar" />

    <Button
        android:text="looper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLooper"
        android:onClick="dispatchActivity"
        android:tag="MyLooperActivity"
        android:layout_below="@+id/buttonDrawable"
        android:layout_toRightOf="@+id/buttonOverlay"
        android:layout_toEndOf="@+id/buttonOverlay" />

    <Button
        android:text="Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonShowActivityResult"
        android:layout_alignLeft="@+id/buttonDrawer"
        android:layout_alignStart="@+id/buttonDrawer"
        android:id="@+id/buttonService"
        android:tag="ServiceActivity"
        android:onClick="dispatchActivity"
        />

    <Button
        android:text="UncaughtException"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonShowActivityResult"
        android:layout_alignLeft="@+id/buttonDrawer"
        android:layout_alignStart="@+id/buttonDrawer"
        android:id="@+id/buttonUncaughtException"
        android:tag="UncaughtActivity"
        android:onClick="dispatchActivity"
    />


</RelativeLayout>
