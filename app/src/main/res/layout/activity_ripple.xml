<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hormiga6.androidapipractice.Ripple.RippleActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ripple button defalut"
        android:id="@+id/buttonRipple"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ripple Button with mask"
        android:id="@+id/buttonRippleWithMask"
        android:layout_below="@+id/buttonRipple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/buttonRipple"
        android:layout_alignEnd="@+id/buttonRipple"
        android:background="@drawable/red_ripple_with_mask"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ripple Button without mask"
        android:id="@+id/buttonRippleWithoutMask"
        android:background="@drawable/red_ripple_without_mask"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/buttonRippleWithMask"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
